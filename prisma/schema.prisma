generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Description{
  id      Int      @id @default(autoincrement())
  content String
  network String
  section_name String
  section_id Int  
  //posts DescriptionPost[]
}

