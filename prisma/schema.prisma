model Discussion{
  id      Int      @id @default(autoincrement())
  title String @unique
  content String
  author String
  posts DiscussionPost[]
}

model DiscussionPost{
  id      Int      @id @default(autoincrement())
  author String
  content String
  discussion_id Int
  discussion Discussion @relation(fields:[discussion_id], references: [id])
}